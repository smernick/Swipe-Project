<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView02"
                    android:background="@drawable/pic_02_do_not_disturb"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="135dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBack02"
                            android:background="@drawable/back_button"
                            android:layout_toLeftOf="@+id/btnPlay02"
                            android:layout_marginLeft="325dp"
                            android:visibility="visible"
                            android:textColor="#1995FC"
                            android:text="BACK"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnNext02"
                            android:background="@drawable/blue_button_short"
                            android:textAlignment="center"
                            android:visibility="visible"
                            android:layout_marginBottom="250dp"
                            android:layout_marginLeft="10dp"
                            android:text="NEXT"
                            />
                </LinearLayout>

</RelativeLayout>